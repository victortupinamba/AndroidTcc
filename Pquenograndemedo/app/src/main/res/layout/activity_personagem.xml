<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whatsapp_image_2023_10_23_at_09_09_50__1_"
    tools:context=".personagem">


    <ScrollView
        android:layout_width="412dp"
        android:layout_height="600dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="412dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/stella___icon" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="340dp"
                android:layout_height="320dp"
                android:layout_gravity="center"
                android:justificationMode="inter_word"
                android:text="@string/textBoss"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="447dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/lucinius_icon" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="@string/textTitulo"
                android:layout_gravity="center"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="412dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/n_zula_icon" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="340dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:justificationMode="inter_word"
                android:text="@string/textTituloEnredo"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="412dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/karoj_icon" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="340dp"
                android:layout_height="320dp"
                android:layout_gravity="center"
                android:justificationMode="inter_word"
                android:text="@string/textEastereeg"
                android:textColor="@color/white" />


            <ImageButton
                android:id="@+id/buttonvol"
                android:contentDescription="Botao que volta para a activity main"
                android:layout_width="412dp"
                android:layout_height="175dp"
                android:backgroundTint="@color/invisivel"
                android:src="@drawable/_14_removebg_preview"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>